{
  "name": "@hivellm/rulebook",
  "version": "0.2.0",
  "description": "CLI tool to standardize AI-generated projects with templates, rules enforcement, and automation",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "rulebook": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "publish:wsl": "export BROWSER=wslview && npm publish"
  },
  "keywords": [
    "ai",
    "automation",
    "templates",
    "rules",
    "standards",
    "cli",
    "npx",
    "agents",
    "cursor",
    "windsurf"
  ],
  "author": "HiveLLM Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "inquirer": "^9.2.0",
    "chalk": "^5.3.0",
    "glob": "^10.3.0",
    "js-yaml": "^4.1.0",
    "ora": "^8.0.0",
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.0",
    "@types/js-yaml": "^4.0.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "templates"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hivellm/rulebook.git"
  },
  "bugs": {
    "url": "https://github.com/hivellm/rulebook/issues"
  },
  "homepage": "https://github.com/hivellm/rulebook#readme"
}

