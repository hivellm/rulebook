{
  "$schema": "https://raw.githubusercontent.com/hivellm/rulebook/main/schema.json",
  "version": "0.9.0",
  
  "project": {
    "name": "my-awesome-project",
    "type": "library",
    "languages": ["typescript", "rust"],
    "coverageThreshold": 95
  },
  
  "workflows": {
    "enabled": true,
    "platforms": ["ubuntu-latest", "windows-latest", "macos-latest"],
    "nodeVersions": ["18.x", "20.x"],
    "customOptions": {
      "typescript-test": {
        "coverage": true,
        "uploadCoverage": true
      },
      "rust-test": {
        "useMiri": false,
        "crossCompile": true
      }
    }
  },
  
  "git": {
    "pushMode": "manual",
    "conventional": true,
    "hooks": true
  },
  
  "modules": {
    "vectorizer": true,
    "synap": true,
    "github": true
  },
  
  "ides": ["cursor", "vscode", "jetbrains"],
  
  "customTemplates": {
    "enabled": false,
    "directory": ".rulebook/templates"
  },
  
  "quality": {
    "strictDocs": true,
    "minHealthScore": 80,
    "enforceConventionalCommits": true
  }
}

